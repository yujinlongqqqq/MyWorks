<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/style_title" >

        <ImageView
            style="@style/style_title_back_btn"
            android:onClick="back" />

        <TextView
            android:id="@+id/address_title_toptext"
            style="@style/style_title_toptext"
            android:text="订单管理" />
    </RelativeLayout>

    <com.ypyg.shopmanager.view.scrollstripview.SlidingTabLayout
        android:id="@+id/id_sliding_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/id_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>