<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/market_select"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                style="@style/style_index_menu_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/index_logo_good_manage" />

            <TextView
                style="@style/style_index_menu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="市场选货" />
        </LinearLayout>

        <TextView
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:background="@color/textcolorrowlines" />

        <LinearLayout
            android:id="@+id/go_to_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                style="@style/style_index_menu_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/index_logo_order_manage" />

            <TextView
                style="@style/style_index_menu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="相册" />
        </LinearLayout>

        <TextView
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:background="@color/textcolorrowlines" />

        <LinearLayout
            android:id="@+id/go_to_photo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                style="@style/style_index_menu_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/index_logo_data_manage" />

            <TextView
                style="@style/style_index_menu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="拍照" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="@color/textcolorrowlines" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/cancel"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_color1"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>