<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light" />

    <style name="AppTheme" parent="AppBaseTheme" />
    <!-- 声明activity切换动画的样式 -->
    <style name="ThemeActivity" mce_bogus="1" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/back_exit</item>
    </style>

    <style name="ThemeActivity2" mce_bogus="1" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimationActivity2</item>
    </style>

    <style name="AnimationActivity2" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/back_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/back_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_exit</item>
    </style>
    <!-- 主页面四个tab的文字 -->
    <style name="main_tab_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <!-- 标题栏统一样式 -->
    <style name="style_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/main_color1</item>
    </style>
    <!-- 标题栏返回键统一样式 -->
    <style name="style_title_back_btn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/icon_back</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- 标题栏文字统一样式 -->
    <style name="style_title_toptext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- 标题栏右侧键统一样式 -->
    <style name="style_title_right_btn">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:src">@drawable/selector_menu_more</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 页面背景统一样式 -->
    <style name="style_background_page">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/color_background</item>
    </style>

    <style name="dialog_contact" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="customer_list_item_bottom_text" parent="@android:style/Theme.Dialog">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black2</item>
    </style>

    <!-- 加载中 统一样式 -->
    <style name="loading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- 设置页面右箭头样式 -->
    <style name="style_setup_rightarrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:text">@string/jiantou</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@drawable/text_arrow_color_bg</item>
    </style>

    <!-- 分割线 -->


    <!-- 首页上面一排三个数字样式 -->
    <style name="style_top_three_digital">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/main_color2</item>
    </style>
    <!-- 首页上面一排三个数字样式 -->
    <style name="style_top_three_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color1</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- 首页留个菜单文字样式 -->
    <style name="style_index_menu_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_word_second</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- 首页留个菜单文字样式 -->
    <style name="style_index_menu_image">
        <item name="android:padding">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!-- 横向分割线统一样式 -->
    <style name="style_dividing_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/rowlines_hight</item>
        <item name="android:background">@color/textcolorrowlines</item>
    </style>

    <style name="AnimRBtoLT" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/translate_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/translate_top_to_bottom</item>
    </style>

    <style name="AnimTtoB" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/translate_top_to_bottom_topcondition</item>
        <item name="android:windowExitAnimation">@anim/translate_bottom_to_top</item>
    </style>

    <style name="AnimLTtoRB" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/translate_top_to_bottom</item>
        <item name="android:windowExitAnimation">@anim/translate_bottom_to_top</item>
    </style>

    <style name="Transparent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <!-- 登录输入框背景 -->
    <style name="style_login_edit_text_back">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/layout_hight50dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/big_black_radius</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 登录、注册输入框标签文字 -->
    <style name="style_login_edit_text_note">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">@color/white2</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- 登录、注册输入框标签文字2 -->
    <style name="style_login_edit_text_note2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">@color/white2</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!-- 登录、注册有标签输入框统一样式 -->
    <style name="style_login_edit_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_color1</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 登录、注册输入框删除按钮 -->
    <style name="style_login_edit_text_delete">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
    </style>
    <!-- 登录、注册大按钮统一样式 -->
    <style name="style_login_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white2</item>
        <item name="android:background">@drawable/btn_orange_radius</item>
    </style>

    <!-- 商品编辑条目样式 start -->
    <style name="style_edit_item1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/whitecolor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="style_edit_item2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/whitecolor</item>
        <item name="android:textColor">@color/text_color1</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="style_edit_item3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@null</item>
    </style>
    <!-- 商品编辑条目样式 end -->


    <!-- RadioButton统一样式 -->
    <style name="style_radio_button">
        <item name="android:layout_weight">0</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/radio_button_bg</item>
        <item name="android:textColor">@color/color_word_main</item>
        <item name="android:textSize">@dimen/radio_button_textsize</item>
    </style>

    <!-- 添加商品窗口动画样式 -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!-- my loading dialog -->
    <style name="MyLoadingDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="RadioButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!-- 图标样式 -->
    <style name="logoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@drawable/text_color_bg</item>
    </style>

    <!-- 店铺管理页面样式 -->
    <style name="TransparentTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="ActionBarStyle.Transparent" parent="@android:Widget.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle.Transparent.TitleTextStyle</item>
    </style>

    <style name="ActionBarStyle.Transparent.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 设置页面背景统一样式 -->
    <style name="style_setup_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- 多行输入框统一样式 -->
    <style name="style_edittext_multiline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/big_white_radius</item>
        <item name="android:gravity">start</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>